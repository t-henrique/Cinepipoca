<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinepipoca.Views.MainPage"
             xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             xmlns:control="clr-namespace:Cinepipoca.Components;assembly=Cinepipoca"
             Title="{Binding Title}">

    <ListView
        ItemsSource="{Binding MoviesUpcoming, Mode=TwoWay}">
        <ListView.Behaviors>
                <behaviors:EventToCommandBehavior
                    Command="{Binding MovieItemSelectedCommand}"
                    EventArgsParameterPath="Item"
                    EventName="ItemTapped" />
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <control:UpcomingMoviesList Padding="10,5,10,5" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
    </ListView>

</ContentPage>